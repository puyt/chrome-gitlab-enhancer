{
  "extends": "@vue/tsconfig/tsconfig.dom.json",
  "include": [
    "env.d.ts",
    "src/**/*",
    "src/**/*.vue"
  ],
  "exclude": [
    "src/**/__tests__/*"
  ],
  "compilerOptions": {
    "composite": true,
    "baseUrl": ".",
    "noImplicitAny": false,
    "paths": {
      "typeRoots": [
        "./node_modules/@types",
        "./node_modules"
      ]
    },
    "types": [
      "chrome"
    ],
    "allowJs": true
  }
}
